pico-8 cartridge // http://www.pico-8.com
version 27
__lua__
p1 = { x = 10, y = 64 }
p2 = { x = 118, y = 64 }


function _update()
 
  if (btn(2, 0)) then 
  		p1.y=p1.y-1 
  end
  if (btn(3, 0)) then
  		p1.y=p1.y+1
  end
  if (btn(2,1)) then
 			p2.y=p2.y-1
 	end
 	if (btn(2,2)) then
 			p2.y=p2.y+1
 	end
end

function _draw()
		cls()
  rectfill(p1.x,
  	p1.y,
  	p1.x+8,
  	p1.y+32,
  	8)
  rectfill(p2.x,
  	p2.y,
  	p2.x+8
  	p2.x+32
  	12)
end



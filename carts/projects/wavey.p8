pico-8 cartridge // http://www.pico-8.com
version 27
__lua__

t = 0
centerx = 64
centery = 64
function _update()
	if (btn(0)) centerx -= 1 
	if (btn(1)) centerx += 1 
	if (btn(2)) centery -= 1
	if (btn(3)) centery += 1
end
function _draw()
	cls()
	for y = -16, 144, 4 do
		for x = -16, 144, 4  do
			
			dist = sqrt((centerx-x)^2+(centery-y)^2) 
			col = ((y/4)%7)+8
			fy = t-dist
			fx = t-dist
			yoffset = cos(fy/50)*10
			xoffset = 0--sin(fx/50)*10
			pset(x+xoffset,y+yoffset, col)
			print(centerx..","..centery, 8, 8)
		end
	end
	t += 1
end

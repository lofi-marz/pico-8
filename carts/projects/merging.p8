cols = {1,12}
i = 2

function _update60()
	if (btnp(0)) cols[1] -= 1
	if (btnp(1)) cols[1] += 1
	if (btnp(2)) cols[2] += 1
	if (btnp(3)) cols[2] -= 1
end

function _draw()
	cls()
	rectfill(64, 64, 32, 32, cols[i+1])
	i+= 1
	i %= #cols
	print(cols[1].." "..cols[2], 0, 0)
end

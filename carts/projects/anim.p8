pico-8 cartridge // http://www.pico-8.com
version 27
__lua__


legs = 4
px = 64
py = 128
t = 0
function _init()
	
end


function _update()
	if (btnp(2)) legs +=1
	if (btnp(3)) legs -= 1
	t += 1		
		
end

function _draw()
		cls()
		print(legs, 8,8)
		
		for y = 1,legs do
			xoffset = -0.5*y*(sin((t+y)/30)+sin((t+y)/15))
			yoffset = -y*8
			if (y == legs) then
				s = 1 
			elseif (y == legs-1) then
				s = 3
			elseif (y == 1) then
				s = 5
			else
				s = 4
			end	
			spr(s, px+xoffset, py+yoffset)

		end
end

